:javascript
  // dialog stuff
  $(document).ready(function(){
    $('#about').click(function(){
      showAbout();
    });
    $('#dialog').click(function(){
      $(this).dialog("close");
    });
  });

  function showAbout() {
    $('#dialog').dialog({
      modal: true,
      resizable: false,
      width: 500

    });
  }

  
